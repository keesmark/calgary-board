<div class="text-center">
  <h1>会員登録</h1>
</div>

<div class="row">
  <%= form_for(@user) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :name, '名前' %>
          <%= f.text_field :name, autocomplete: true %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, autocomplete: true %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, autocomplete: true %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password_confirmation, 'もう1度パスワード' %>
          <%= f.password_field :password_confirmation, autocomplete: true %>
        </div>
      </div>
    <%= f.submit 'Sign up', class: 'waves-effect waves-light btn white-text' %>
  <% end %>
    </form>
  </div>