<div class="col s12 m9 push-m3">
  <div class="fixed-action-btn">
    <%= link_to '<i class="large material-icons">mode_edit</i>'.html_safe, new_classified_path, class: "btn-floating btn-large waves-effect waves-light red" %>
  </div>
  <% breadcrumb :category %>
  <% @classifieds.each do |classified| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= classified.title.truncate(50) %></span>
        <p><span class="badge"><%= classified.updated_at %></span></p>
      </div>
      <div class="card-action">
        <%= link_to '詳細'.html_safe, classified %><span class="new badge red" data-badge-caption=""><%= classified.category.name %></span><span class="new badge blue" data-badge-caption=""><%= classified.area.name %></span>
      </div>
    </div>
  <% end %>
  <div class="col s12 m9 center-align">
    <%= paginate @classifieds %>
  </div>
</div>
<div class="col s12 m3 pull-m9">
  <%= render 'layouts/sidebar' %>
</div>
